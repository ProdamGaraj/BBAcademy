@{
    var bilimbank = "@bilimbank";

    string rights;
    string controller = ViewContext.RouteData.Values["controller"].ToString();
    string learningproc;
    string usagepol;
    string privpol;
    string login;
    if (Context.Session.GetInt32("language") == 0)
    {
        rights = "© 2023 Barcha huquqlar himoyalangan, bilimbank";
        learningproc = "O’quv jarayoni";
        usagepol = "Ishlatish shartlari";
        privpol = "Maxfiylik siyosati";
        login = "Login";
    }
    else
    {
        rights = "© 2023 Все права защищены, bilimbank";
        learningproc = "Процесс обучения";
        usagepol = "Условия использования";
        privpol = "Политика конфиденциальности";
        login = "Войти";
    }
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bilimbank</title>
    <link rel="stylesheet" href="~/css/reg_form.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Prompt:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;1,300&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <div class="header-cont">
            <a href="/">
                <img class="header-comp-logo" src="~/pict/logo-icon 2.svg">
            </a>
            <div class="header-comp-name">BilimBank</div>
            <div class="header-container-right_section">
                <div class="header-container-right_section-lang">
                    <div class="header-container-right_section-lang-element"><a class="a-lang" href="@controller/ChangeLang/0">uz</a></div>
                    <div class="header-container-right_section-lang-element"><a class="a-lang" href="@controller/ChangeLang/1">ru</a></div>
                </div>
                <div style="margin-left: auto">
                    <a class="header-container-right_section-login" asp-controller="Account" asp-action="Login">@login</a>
                </div>
            </div>
        </div>
    </header>
    <div role="main">
        @RenderBody()
    </div>
    <footer>
        <div class="footer-container">
            <div class="footer-element">
                <img class="footer-logo" src="~/pict/logo-icon 1.svg">
                @rights
            </div>
            <div class="footer-element">
                @learningproc
            </div>
            <div class="footer-element">
                @usagepol
            </div>
            <div class="footer-element">
                @privpol
            </div>
            <div class="footer-right">
                <div class="footer-element">
                    <img class="footer-icon" src="~/pict/foot_teleg.png">
                    @bilimbank
                </div>
                <div class="footer-element">
                    <img class="footer-icon" src="~/pict/foot_inst.png">
                    @bilimbank
                </div>
            </div>
        </div>
    </footer>
</body>
</html>