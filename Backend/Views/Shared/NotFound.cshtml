@{
    var bilimbank = "@bilimbank";

    string rights;
    string learningproc;
    string usagepol;
    string privpol;
    string devpage;
    string mycourse;
    if (Context.Session.GetInt32("language") == 0)
    {
        rights = "© 2023 Barcha huquqlar himoyalangan, bilimbank";
        learningproc = "O’quv jarayoni";
        usagepol = "Ishlatish shartlari";
        privpol = "Maxfiylik siyosati";
        devpage = "Sahifa ishlab chiqilmoqda";
        mycourse = "Mening kurslar";
    }
    else
    {
        rights = "© 2023 Все права защищены, bilimbank";
        learningproc = "Процесс обучения";
        usagepol = "Условия использования";
        privpol = "Политика конфиденциальности";
        devpage = "Страница находится в разработтке";
        mycourse = "Мои курсы";
    }
}
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>My account</title>
    <link rel="stylesheet" type="text/css" href="~/css/404page.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Prompt:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;1,300&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <div class="header-container">
            <div class="header-container-leftside">
                <a href="/">
                    <img class="main-logo" src="~/pict/Shared/logo-icon 2.svg">
                </a>
                <div class="main-logo-text">BilimBank</div>
            </div>
            <div class="header-container-rightside">
                <a class="ur_photo" href="/Account">
                    <img src="~/pict/ur_photo.png">
                </a>
            </div>
        </div>
    </header>
    <main>
        <div class="error-text">404</div>
        <div class="err-desc">@devpage</div>
        <a class="rtrn-btn" href="/Account">@mycourse</a>
    </main>
    <footer>
        <div class="footer-container">
            <div class="footer-element">
                <img class="footer-logo" src="~/pict/Shared/logo-icon 1.svg">
                @rights
            </div>
            <div class="footer-element">
                @learningproc
            </div>
            <div class="footer-element">
                @usagepol
            </div>
            <div class="footer-element">
                @privpol
            </div>
            <div class="footer-right">
                <div class="footer-element">
                    <img class="footer-icon" src="~/pict/Shared/foot_teleg.png">
                    @bilimbank
                </div>
                <div class="footer-element">
                    <img class="footer-icon" src="~/pict/Shared/foot_inst.png">
                    @bilimbank
                </div>
            </div>
        </div>
    </footer>
</body>
</html>