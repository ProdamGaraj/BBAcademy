@model Backend.ViewModels.AnswerViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Answer creating";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<form id="log-form" class="log-block-form" method="post" asp-controller="Account" asp-action="Login">
    <div class="log-container">
        <label class="log-label">Content</label>
        <input asp-for="" placeholder="" class="form-control textbox-dg font-weight-bold text-center reg-log-input" type="text">
        <label class="log-label">Cost</label>
        <input asp-for="" placeholder="" class="form-control textbox-dg font-weight-bold text-center reg-log-input" type="text">
        <label class="log-label">Is Correct</label>
        <input asp-for="" placeholder="" class="form-control textbox-dg font-weight-bold text-center reg-log-input" type="checkbox">s
        <div class="d-grid gap-2 d-md-block float-right">

            <button type="submit" class="registerbtn">
                <div class="log-in-btn">Add answer</div>
            </button>
            <button type="submit" class="registerbtn">
                <div class="log-in-btn">Next question</div>
            </button>
        </div>
    </div>
</form>