@model Backend.ViewModels.DataViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Answer creating";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<form id="log-form" class="log-block-form" method="post" asp-controller="Data" asp-action="Answer">
    <div class="log-container">
        <input name="ModelString" type="hidden" value="@Model.CurrentStruct">
        <label class="log-label">Name</label>
        <input name="Answer.Name" placeholder="" class="form-control textbox-dg font-weight-bold text-center reg-log-input" type="text">
        <label class="log-label">Content</label>
        <input name="Answer.Content" placeholder="" class="form-control textbox-dg font-weight-bold text-center reg-log-input" type="text">
        <label class="log-label">Cost</label>
        <input name="Answer.Cost" placeholder="" class="form-control textbox-dg font-weight-bold text-center reg-log-input" type="text">
        <label class="log-label">Is Correct</label>
        <input name="Answer.IsCorrect" placeholder="" class="form-control textbox-dg font-weight-bold text-center reg-log-input" type="text">
        <div class="d-grid gap-2 d-md-block float-right">

            <button type="submit" class="registerbtn">
                <div class="log-in-btn">Add answer</div>
            </button>
        </div>
    </div>
</form>
<form id="log-form" class="log-block-form" method="post" asp-controller="Data" asp-action="Question">
    <div class="log-container">

        <input name="ModelString" type="hidden" value="@Model.CurrentStruct">

            <button type="submit" class="registerbtn">
                <div class="log-in-btn">Next question</div>
            </button>
    </div>
    </div>
</form>
