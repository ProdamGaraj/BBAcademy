@model Backend.ViewModels.LessonViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Lesson creating";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<form id="log-form" class="log-block-form" method="post" asp-controller="Account" asp-action="Login">
    <div class="log-container">
        <label class="log-label">Name</label>
        <input name="Lesson.Name" placeholder="" class="form-control textbox-dg font-weight-bold text-center reg-log-input" type="text">
        <label class="log-label">Description</label>
        <input name="Lesson.Description" placeholder="" class="form-control textbox-dg font-weight-bold text-center reg-log-input" type="text">
        <label class="log-label">Text content</label>
        <input name="Lesson.Content" placeholder="" class="form-control textbox-dg font-weight-bold text-center reg-log-input" type="text">
        <label class="log-label">Media content path (can be empty)</label>
        <input name="Lesson.MediaTemplatePath" placeholder="" class="form-control textbox-dg font-weight-bold text-center reg-log-input" type="text">
        <div class="d-grid gap-2 d-md-block float-right">

            <button type="submit" class="registerbtn">
                <div class="log-in-btn">Add lesson</div>
            </button>
            <button type="submit" class="registerbtn">
                <div class="log-in-btn">Add exam</div>
            </button>
        </div>
    </div>
</form>