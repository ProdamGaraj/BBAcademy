@model Backend.ViewModels.DataViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Certificate creating";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<form id="log-form" class="log-block-form" method="post" asp-controller="Data" asp-action="End">
    <div class="log-container">
        <input name="ModelString" type="hidden" value=@Model.CurrentStruct>
        <label class="log-label">Name</label>
        <input name="CertificateTemplate.Name" placeholder="" class="form-control textbox-dg font-weight-bold text-center reg-log-input" type="text">
        <label class="log-label">Content</label>
        <input name="CertificateTemplate.TextContent" placeholder="" class="form-control textbox-dg font-weight-bold text-center reg-log-input" type="text">
        <label class="log-label">Media path</label>
        <input name=CertificateTemplate.MediaPath placeholder="" class="form-control textbox-dg font-weight-bold text-center reg-log-input" type="text">
        <div class="d-grid gap-2 d-md-block float-right">
            <button type="submit" class="registerbtn">
                <div class="log-in-btn">Add Certificate</div>
            </button>
        </div>
    </div>
</form>