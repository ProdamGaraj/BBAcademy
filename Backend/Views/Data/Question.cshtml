@model Backend.ViewModels.DataViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Question creating";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<form id="log-form" class="log-block-form" method="post" asp-controller="Data" asp-action="Answer">
    <div class="log-container">
        <input name="ModelString" type="hidden" value=@Model.CurrentStruct>
        <label class="log-label">Name</label>
        <input name="Question.Name" placeholder="" class="form-control textbox-dg font-weight-bold text-center reg-log-input" type="text">
        <label class="log-label">Content</label>
        <input name="Question.Content" placeholder="" class="form-control textbox-dg font-weight-bold text-center reg-log-input" type="text">
        <label class="log-label">Type</label>
        <input name="Question.QuestionType" placeholder="" class="form-control textbox-dg font-weight-bold text-center reg-log-input" type="text">
        <label class="log-label">Media path</label>
        <input name="Question.MediaPath" placeholder="" class="form-control textbox-dg font-weight-bold text-center reg-log-input" type="text">
        <div class="d-grid gap-2 d-md-block float-right">

            <button type="submit" class="registerbtn">
                <div class="log-in-btn">Add question</div>
            </button>
        </div>
    </div>
</form>
<form id="log-form" class="log-block-form" method="post" asp-controller="Data" asp-action="Certificate">
    <div class="log-container">

        <input name="ModelString" type="hidden" value=@Model.CurrentStruct>

            <button type="submit" class="registerbtn">
                <div class="log-in-btn">Add certificate</div>
            </button>
    </div>
    </div>
</form>
